<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nuevo establecimiento</h1>
      <hr>
      <form action="/register-place" method="POST">

        <div class="form-group">
          <label for="name">Nombre</label>
          <input name="name" type="text" class="form-control" id="name">
        </div>

        <div class="form-group">
          <label for="type">Tipo de establecimiento</label>
          <select name="type" type="text" id="type" class="form-control">
            <option selected>Elige una opción</option>
            <option>cafetería</option>
            <option>librería</option>
          </select>
        </div>

        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <label for="latitude">Latitud</label>
              <input name="latitude" type="text" class="form-control" id="latitude">
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="longitude">Longitud</label>
              <input name="longitude" type="text" class="form-control" id="longitude">
            </div>
          </div>
        </div>

        <div class="text-right mt-5">
          <button type="submit" class="btn btn-dark">Registrar establecimiento</button>
        </div>
      </form>
    </div>

  </div>
</div>